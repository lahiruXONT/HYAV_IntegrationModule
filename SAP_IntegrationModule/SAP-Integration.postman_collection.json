          "const payload = method + \"\\n\" + path + \"\\n\" + timestamp + \"\\n\" + body;\r",
          "\r",
          "// Compute HMAC\r",
          "const hash = CryptoJS.HmacSHA256(payload, secret);\r",
          "const signature = CryptoJS.enc.Base64.stringify(hash);\r",
