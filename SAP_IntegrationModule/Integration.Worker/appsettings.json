{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.EntityFrameworkCore": "Warning",
        "Microsoft.EntityFrameworkCore.Database.Command": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff} {Level:u3} {CorrelationId} [{SourceContext}] {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/integration-.json",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 30,
          "formatter": "Serilog.Formatting.Json.JsonFormatter"
        }
      },
      {
        "Name": "MSSqlServer",
        "Args": {
          "connectionString": "UserDB",
          "sinkOptions": {
            "tableName": "ApplicationLogs",
            "schemaName": "dbo",
            "autoCreateSqlTable": true,
            "batchPostingLimit": 50,
            "period": "0.00:00:30"
          },
          "restrictedToMinimumLevel": "Information",
          "columnOptions": {
            "additionalColumns": [
              {
                "ColumnName": "CorrelationId",
                "DataType": "VarChar",
                "DataLength": 100
              },
              {
                "ColumnName": "Application",
                "DataType": "VarChar",
                "DataLength": 50
              },
              {
                "ColumnName": "Environment",
                "DataType": "VarChar",
                "DataLength": 20
              },
              {
                "ColumnName": "UserId",
                "DataType": "VarChar",
                "DataLength": 100
              },
              {
                "ColumnName": "BusinessUnit",
                "DataType": "VarChar",
                "DataLength": 10
              }
            ]
          }
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithThreadId", "WithMachineName", "CorrelationId" ]
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "UserDB": "Server=202.124.186.16,1433;Database=XONTVenturaUserHYAV_QC;User Id=Lahiru;Password=UzfT3;TrustServerCertificate=True;Encrypt=True;",
    "SystemDB": "Server=202.124.186.16,1433;Database=XONTVenturaSystemHYAV_QC;User Id=Lahiru;Password=UzfT3;TrustServerCertificate=True;Encrypt=True;"
  },
  "DefaultBusinessUnit": "HYAV",
  "SapApi": {
    "BaseUrl": "https://sap",
    "Username": "user",
    "Password": "password",
    "TimeoutSeconds": 120
  },
  "BackgroundServices": {
    "CustomerSyncBackgroundService": {
      "IsEnabled": true,
      "Interval": "24:00:00",
      "InitialDelay": "00:01:00",
      "DailyScheduleTime": "02:00:00",
      "MaxConsecutiveFailures": 10
    },
    "MaterialSyncBackgroundService": {
      "IsEnabled": true,
      "Interval": "01:00:00",
      "InitialDelay": "00:01:00",
      "DailyScheduleTime": "02:00:00",
      "MaxConsecutiveFailures": 10
    }
  }
}